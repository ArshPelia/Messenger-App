<%- include('./layout.ejs'); %>
<main class="container">
    <h1 class="text-center mt-5"><%- title %></h1>

    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card chatbox">
                <div class="card-body">
                    <ul id="messagelist" class="list-unstyled mb-0"></ul>
                </div>
                <form class="card-footer bg-light">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Type your message ..." />
                        <div class="input-group-append">
                            <button class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4 mt-md-0 mt-4">
            <div class="card activeusers">
                <div class="card-header bg-primary text-white">
                    Active Users
                </div>
                <ul id="users" class="list-group list-group-flush list-unstyled mb-0"></ul>
            </div>
        </div>
    </div>

    <%- include('./footer.ejs'); %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"></script>
    <script src="../public/javascripts/chatEvents.js" curUser='<%- currentUser %>'></script>
</main>
