<%- include('./layout.ejs'); %>

<div class="container">
    <h1 class="mb-4"><%- title %></h1>
    <p>Welcome to <em>Messenger</em>, a very basic Express website developed as a tutorial example on the Mozilla Developer Network.</p>

    <div class="row mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Latest Posts
                </div>
                <div class="card-body">
                    <% if (message_list.length > 0) { %>
                        <% message_list.forEach(message => { %>
                            <div class="mb-4">
                                <h2><a href="<%= message.url %>" class="text-dark"><%= message.title %></a></h2>
                                <p class="text-muted mb-2">By <%= message.creator.fname %></p>
                                <% if (message.content) { %>
                                    <p><%= message.text.substring(0, 150) %>...</p>
                                <% } else { %>
                                    <p>No text available.</p>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No posts available.</p>
                    <% } %>
                    <a href="/posts" class="btn btn-primary">View All Posts</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Statistics
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><strong>Total Messages:</strong> <%= message_count %></li>
                        <!-- Add more statistics as needed -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./footer.ejs'); %>
