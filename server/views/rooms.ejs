<%- include('./layout.ejs'); %>
<main class="container">
    <h1 class="text-center mt-5"><%- title %></h1>

    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Available Rooms
                </div>
                <div class="card-body">
                    <ul id="roomList" class="list-group list-group-flush list-unstyled mb-0"></ul>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    Create New Room
                </div>
                <div class="card-body">
                    <form id="createRoomForm">
                        <div class="form-group">
                            <label for="roomName">Room Name:</label>
                            <input type="text" class="form-control" id="roomName" placeholder="Enter room name" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"></script>
    <script src="../public/javascripts/roomEvents.js" curUser='<%- currentUser %>'></script>

</main>

<%- include('./footer.ejs'); %>
