<%- include('./layout.ejs'); %>

<div class="container mt-5">
  <% if (locals.errors) { %>
    <div class="errors">
    <%for (const err of errors){ %>
        <p class="error"><%=err.msg%></p>
      <%}%>
    </div>
    <%}%>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4">Please Log In</h1>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="username" placeholder="Enter your email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
      <div class="mt-3">
        <button class="btn btn-link"><a href="/signup">Sign Up</a></button>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs'); %>
